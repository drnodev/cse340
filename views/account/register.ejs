<div class="register-container">
    <form class="register-form" action="/account/register" method="post" novalidate>
        <h2>Create Account</h2>


        <% if (errors) { %>
            <div class="error-box">
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>


                <label for="account_firstname">First Name</label>
                <input name="account_firstname" type="text" id="account_firstname" required
                    value="<%= locals.account_firstname || '' %>">

                <label for="account_lastname">Last Name</label>
                <input name="account_lastname" type="text" id="account_lastname" required
                    value="<%= locals.account_lastname || '' %>">

                <label for="account_email">Email</label>
                <input name="account_email" type="email" id="account_email" required
                    value="<%= locals.account_email || '' %>">

                <label for="account_password">Password</label>
                <div class="password-field">
                    <input name="account_password" type="password" id="account_password"
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{12,}$" required>
                    <button type="button" class="toggle-pass" onclick="togglePassword()">üëÅ</button>
                </div>

                <div>
                    <small>Your password must be at least 12 characters long and include: one uppercase letter, one
                        lowercase letter, one number, and one special symbol.</small>
                </div>

                <button type="submit" class="btn-submit">Register</button>

                <div class="login-link">
                    Already have an account? <a href="/account/login">Login here</a>
                </div>
    </form>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById("account_password");
        input.type = input.type === "password" ? "text" : "password";
    }
</script>