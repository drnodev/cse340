<div class="login-container">
  <form class="login-form">
    <h2>Login</h2>

<% if (errors) { %>
            <div class="error-box">
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% } %>


    <label for="email">Email</label>
    <input type="email" id="email" required>

    <label for="password">Password</label>
    <div class="password-field">
      <input type="password" id="password" required>
      <button type="button" class="toggle-pass" onclick="togglePassword()">üëÅ</button>
    </div>

    <div>
        <small>Your password must be at least 12 characters long and include: one uppercase letter, one lowercase letter, one number, and one special symbol.</small>
    </div>

    <button type="submit" class="btn-submit">Sign In</button>

    <div class="register">
      Don't have an account? <a href="/account/register">Register here</a>
    </div>
  </form>
</div>

<script>
  function togglePassword() {
    const input = document.getElementById("password");
    input.type = input.type === "password" ? "text" : "password";
  }
</script>
