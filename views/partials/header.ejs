<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">
      <img class="logo" width="50" src="/images/site/icon.png" alt="CSE Motors Logo">
      CSE Motors
    </a>
  </span>
  <div id="tools">

    <% if (typeof accountData !=='undefined' && accountData) { %>
      <p>Welcome <%= accountData.account_firstname %>
          <%= accountData.account_lastname %>!</p>
      <span>
        <a title="Click to Manage Account" href="/account">Manage</a>
      </span>
      |
      <span>
        <a title="Click to log out" href="/account/logout">Log Out</a>
      </span>
      <% } else { %>
        <a title="Click to log in" href="/account/login">Login</a>
        <% } %>
  </div>
</header>